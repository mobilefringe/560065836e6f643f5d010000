                        </a> 

                        <a href="{{alt_promo_image_url_2}}" rel="lightbox-gallery" title="{{name}}" class="secondary-locale">
                            <img alt="promo image" class="promo_image" src="{{alt_promo_image_url_2}}" />
                        </a> 
                        
                    </div>
                        <div class="promo_desc_box">
                            <a href="../promotions/{{slug}}">
                                <p class="promo_header right_column_header">
                                    <span class="primary-locale">{{name}}</span>
                                    <span class="secondary-locale">{{name_2}}</span>
                                </p>
                            </a>
                            <p class="directory_content promo_date"><a href="/stores/{{store_detail_btn}}">{{store_name}}</a><br>{{dates}}</p>
                            <p id="desc">
